#include <iostream>
#include <conio.h>
#include <stack>
using namespace std;

void tambah(stack<string>&);

void print(stack<string>);

void playy(stack<string>&,string&);

void displayplay(string);

void stop(string&);

void run();


int main(){
run();
}

void tambah(stack<string>&playlist){
    string lagu;
	cout<<"-------------------------------\n";
	cin.ignore();
	cout<<"Enter the song's title :\n";
	getline(cin, lagu);
	playlist.push(lagu);
}
  
void print(stack<string>playlist){
int j=1;
cout<<"\n===============================\n";
if (playlist.empty()){
	cout<<"\nYour playlist is empty";
	cout<<"\nPlease add some songs";
}else{
	while(!playlist.empty()){
		cout<<endl<<j<<". "<<playlist.top();
		j++;
		playlist.pop();
	}
}
cout<<"\n\n===============================\n";
}

void playy(stack<string>&playlist,string &play){
	if(playlist.empty()){
		cout<<"\nYour playlist is empty";
		cout<<"\nPlease add some songs";
	}else{
		play=playlist.top();
		playlist.pop();
	}
}

void displayplay(string play){
	cout<<"==============================WELCOME====================================="<<endl;
	cout<<"================================T0========================================"<<endl;
	cout<<"                                                                          "<<endl;
	cout<<" ###       ##  ########  ########   ##   ########  ##    ##  "<<endl;
	cout<<" ## ##     ##  ##    ##     ##      ##   ##         ##  ##   "<<endl;
	cout<<" ##   ##   ##  ##    ##     ##      ##   ########    ####    "<<endl;
	cout<<" ##	## ##  ##    ##     ##      ##   ##           ##     "<<endl;
	cout<<" ##       ###  ########     ##      ##   ##           ##     "<<endl;
	cout<<"                                                                          "<<endl;
	cout<<"===========================HAVE A NICE DAY================================="<<endl;
	cout<<"                                                                          "<<endl;
	cout<<"\nStatus : ";
	cout<<"\nNow playing - "<<play<<endl;
}

void stop(string &play){
	play.erase();
}

void run(){
	int pilihan;
	string play;
	stack<string>playlist;
	
	do{
	
		displayplay(play);
		print(playlist);
		cout<<"\nChoose a number below";
		cout<<"\n1. Add song \n2. Play \n3. Stop \n4. Exit\n"<<"Input your choice : ";
		cin>>pilihan;
		if(pilihan==1){
			tambah(playlist);
		}else if(pilihan==2){
			playy(playlist,play);
		}else if(pilihan==3){
			stop(play);
		
}

